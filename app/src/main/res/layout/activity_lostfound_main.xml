<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lostfound_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.openjcu.m_home.l_f.LostfoundMainAct">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Toolbar 自动加载 res/menu 的 toolbar.xml 用于显示-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/memo_commit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap" />
    </android.support.design.widget.AppBarLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/reflash_l_f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedede"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">







    <ListView
        android:id="@+id/l_f_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#dcdcdc">

    </ListView>






    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
        xmlns:rfab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/separate_rfab_sample_rfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        rfab:rfab_size="normal"
        rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
        rfab:rfab_color_normal="#1397c2"
        rfab:rfab_color_pressed="#b0120a"
        rfab:rfab_shadow_radius="10dp"
        rfab:rfab_shadow_color="#666"
        rfab:rfab_shadow_dx="2dp"
        rfab:rfab_shadow_dy="3dp"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>










</LinearLayout>
