<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rounded"
    android:minHeight="100dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jobLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text=" 岗       位：" />

        <TextView
            android:id="@+id/jobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/jobLable"
            android:layout_toEndOf="@+id/jobLable" />

        <TextView
            android:id="@+id/jobPublishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/jobDescriptionLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 描    述："
            android:layout_below="@+id/jobLable"
            android:layout_toLeftOf="@+id/jobName"
            android:layout_toStartOf="@+id/jobName" />

        <TextView
            android:id="@+id/jobDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/jobName"
            android:layout_alignLeft="@+id/jobName"
            android:layout_alignStart="@+id/jobName" />


    </RelativeLayout>

    <TextView
        android:id="@+id/firmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jobDescriptionLable"
        android:layout_marginTop="11dp"
        android:text="公司名称" />

</LinearLayout>