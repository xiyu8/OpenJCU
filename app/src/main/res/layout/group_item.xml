<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#dcdcdc"
    android:layout_height="220dp"
    android:gravity="center"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:background="#fff"
        android:layout_margin="5dp"
        android:layout_marginLeft="2dp"
        android:paddingBottom="7dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/group_position"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="口令"
            android:textSize="22sp"
            android:gravity="center"
            app:srcCompat="@drawable/bgi1" />

        <TextView
            android:id="@+id/group_key"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="22sp"
            android:textColor="#222"
            android:layout_alignTop="@+id/group_position"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/group_position"
            android:text="title"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/group_members"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:orientation="vertical"
            android:background="@drawable/bgi"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/exitOrRemove"
            android:layout_alignBottom="@+id/group_key"
            android:layout_alignLeft="@+id/group_key"
            android:layout_alignStart="@+id/group_key"
            android:layout_below="@+id/group_key">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_content_content_content_content_content_content_content_content_content_content_content"
                android:textColor="#666"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>
            </LinearLayout>

        <Button
            android:id="@+id/groupInMap"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:text="查看"
            android:background="@drawable/bgi"
            android:layout_alignRight="@+id/group_position"
            android:layout_alignEnd="@+id/group_position"
            android:layout_alignLeft="@+id/group_position"
            android:layout_alignStart="@+id/group_position"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/group_position" />

        <Button
            android:id="@+id/exitOrRemove"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bgi"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Button"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/group_key" />

    </RelativeLayout>


</LinearLayout>