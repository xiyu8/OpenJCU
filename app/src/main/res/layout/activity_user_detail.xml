<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    tools:context="com.example.openjcu.login.UserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/detailUserIcon"
                android:onClick="onClick"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/bgi1"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:id="@+id/getUserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:onClick="onClick"/>
        </LinearLayout>


        <!--编辑name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="name"/>
            <Button
                android:id="@+id/getName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/myTheme"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="46dp"
                android:text="我发过的"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:id="@+id/showMyTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/myComment"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="46dp"
                android:text="我评论过的"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:id="@+id/showMyConment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/myResponse"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="46dp"
                android:text="收到的回复"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:id="@+id/showMyResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="检 查 更 新"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>






    </LinearLayout>
</RelativeLayout>
